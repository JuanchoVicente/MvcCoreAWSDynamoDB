@model IEnumerable<MvcCoreAWSDynamoDB.Models.Coche>

@{
    ViewData["Title"] = "ListCoches";
}

@if (Model.Count() < 1 )
{
    <h1>Sin coches, cree un nuevo coche para añadir a la lista</h1>
    <p>
        <a asp-action="CreateCar" asp-controller="Coches">
            Crear un nuevo coche
        </a>
    </p>
}
else
{
    <h1>ListCoches</h1>

    <p>
        <a asp-action="CreateCar" asp-controller="Coches">
            Crear un nuevo coche
        </a>
    </p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCoche)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VelocidadMaxima)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCoche)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VelocidadMaxima)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ })
                </td>
                <td>        
                    <p>En los detalles se vera la imagen del coche</p>
                    <a class="btn btn-info" asp-action="DetailsCoche" asp-controller="Coches" asp-route-id="@item.IdCoche">
                        Detalles
                    </a>
                </td>
                <td>                   
                    <a class="btn btn-danger" asp-action="DeleteCar" asp-controller="Coches" asp-route-idCoche="@item.IdCoche">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
